{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating an express server in Typescript.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "build": "npm run build-sass && npm run build-ts && npm run build-doc && npm run copy-static-assets",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "build-doc": "./node_modules/.bin/typedoc --out dist/docs --mode modules",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-test": "npm run test -- --watchAll"
  },
  "author": "Tanmay",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/express-pino-logger": "^4.0.2",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.7"
  }
}
